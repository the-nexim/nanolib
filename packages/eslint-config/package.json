{
  "name": "@nexim/eslint-config",
  "version": "2.0.0-alpha.1",
  "description": "Base Eslint configuration for Nexim projects.",
  "keywords": [
    "eslint",
    "eslint-config",
    "lint",
    "linter",
    "style-guide",
    "cross-platform",
    "ECMAScript",
    "typescript",
    "javascript",
    "node",
    "nodejs",
    "browser",
    "esm",
    "module",
    "utility",
    "util",
    "utils",
    "nanolib",
    "alwatr"
  ],
  "homepage": "https://github.com/the-nexim/nanolib/",
  "bugs": {
    "url": "https://github.com/the-nexim/nanolib/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/the-nexim/nanolib",
    "directory": "packages/eslint-config"
  },
  "license": "AGPL-3.0-only",
  "author": "S. Amir Mohammad Najafi <njfamirm@gmail.com> (https://www.njfamirm.ir)",
  "contributors": [
    "Arash Ghardashpoor <arash.qardashpoor@gmail.com> (https://www.agpagp.ir)"
  ],
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/main.d.ts",
      "import": "./dist/main.mjs"
    }
  },
  "main": "./dist/main.mjs",
  "module": "./dist/main.mjs",
  "types": "./dist/main.d.ts",
  "files": [
    "**/*.{js,mjs,cjs,map,d.ts,html,md,LEGAL.txt}",
    "LICENSE"
  ],
  "scripts": {
    "build": "wireit",
    "watch": "wireit"
  },
  "dependencies": {
    "@eslint/compat": "^1.2.6",
    "@eslint/js": "^9.19.0",
    "@stylistic/eslint-plugin": "^3.0.1",
    "eslint": "^9.19.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-tsdoc": "^0.4.0",
    "globals": "^15.14.0",
    "typescript-eslint": "^8.23.0"
  },
  "devDependencies": {
    "@alwatr/nano-build": "^5.0.0",
    "@alwatr/type-helper": "^5.0.0",
    "@nexim/typescript-config": "workspace:^",
    "@types/eslint": "^9.6.1",
    "@types/node": "^22.12.0",
    "typescript": "^5.7.3",
    "wireit": "^0.14.10"
  },
  "peerDependencies": {
    "@eslint/compat": ">1.0.0 <2.0.0",
    "eslint": ">9.0.0 <10.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "nano-build": {
    "platform": "node",
    "cjs": false
  },
  "wireit": {
    "build": {
      "dependencies": [
        "build:type",
        "build:es"
      ]
    },
    "build:es": {
      "command": "nano-build --preset=module",
      "files": [
        "src",
        "tsconfig.json"
      ],
      "clean": "if-file-deleted",
      "output": [
        "dist",
        "tsconfig.tsbuildinfo"
      ]
    },
    "build:type": {
      "command": "tsc --build"
    },
    "watch": {
      "dependencies": [
        "watch:ts"
      ]
    },
    "watch:ts": {
      "command": "tsc --build --watch --preserveWatchOutput",
      "dependencies": [
        "watch:es"
      ]
    },
    "watch:es": {
      "command": "nano-build --preset=module -- --watch",
      "service": true
    }
  }
}
