{
  "root": true,
  "extends": "@nexim/eslint-config",
  "plugins": [
    "eslint-plugin-tsdoc"
  ],
  "rules": {
    "tsdoc/syntax": "error"
  },
  "overrides": [
    {
      "files": [
        "*.js",
        "*.mjs",
        "*.cjs"
      ],
      "parserOptions": {
        "project": null
      },
      "rules": {
        "@typescript-eslint/no-var-requires": "off",
        "@typescript-eslint/explicit-module-boundary-types": "off",
        "tsdoc/syntax": "off"
      },
      "env": {
        "node": true
      }
    }
  ]
}
